pipeline {
    agent any

    stages {
        stage('Build & Package') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
    }

    post {
        success {
            echo '✅ Build réussi (tests ignorés).'
        }
        failure {
            echo '❌ Build cassé, va voir les logs.'
        }
    }
}