pipeline {
    agent any

    tools {
        // EXACTEMENT le nom défini dans Global Tool Configuration
        maven 'Maven_3_9'
    }

    stages {
        stage('Build & Package') {
            steps {
                script {
                    def mvnCmd = 'mvn clean package -DskipTests'
                    if (isUnix()) {
                        sh mvnCmd
                    } else {
                        bat mvnCmd
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build réussi (tests ignorés).'
        }
        failure {
            echo '❌ Build cassé, va voir les logs.'
        }
    }
}